<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <title><%= blog.title %></title>
    <%- include('./partials/head')  %>
</head>
<body>
    <%- include('./partials/nav')  %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImage %>" alt="" width="700px">
        <pre><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageUrl %>" alt="" width="30px"> <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-4">
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blogs/comments/<%= blog._id %>" method="post">
                <input
                type="text"
                class="form-control mb-3"
                id="text"
                name="content"
                aria-describedby="text"
              />
              <button type="submit" class="btn btn-primary mb-3">Post</button>
            </form>
        <% } %>

        <% comments.forEach(comment => { %>
            <img src="<%= comment.createdBy.profileImageUrl %>" alt="" width="30px"> <%= comment.createdBy.fullName %>
            <pre class="ms-1"><%= comment.content %></pre>
        <% }) %>

    </div>

    <%- include('./partials/scripts')  %>
</body>
</html>